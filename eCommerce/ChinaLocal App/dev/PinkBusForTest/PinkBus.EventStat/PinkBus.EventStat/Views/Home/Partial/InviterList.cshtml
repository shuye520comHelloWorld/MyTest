@using PinkBus.EventStat.Models;

@{
    SearchModel SM = ViewBag.SearchModel;
}

@model List<pb_Inviter>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
               <th width="18%">
                    直销员编号
                </th>
                <th width="15%">
                    顾问姓名
                </th>
                <th width="12%">
                    职级
                </th>
                <th width="15%">
                    手机号
                </th>
                <th width="12%">
                    来宾券数
                </th>
                <th  width="12%">
                    贵宾券数
                </th>
                <th width="16">
                    操作
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (pb_Inviter m in Model)
            {
                <tr>
                    <td>
                        @m.DirectSellerId
                    </td>
                    <td>
                        @(m.LastName + m.FirstName)
                    </td>
                    <td>
                        @m.Level
                    </td>
                    <td>
                        @m.PhoneNumber
                    </td>
                    <td>
                        @m.NormalTicketQuantity.ToString()
                    </td>
                    <td>
                        @m.VIPTicketQuantity.ToString()
                    </td>
                    <td>
                        <button class="btn activity-btn__import SeeInviterCustomer" type="button" data-toggle="modal" data-target="#InviterCusModel" directsellerid="@m.DirectSellerId">查看顾客</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div style="text-align:center;padding-top:100px;"><img src="~/Content/images/nothing.png" /></div>
}
<input type="hidden" id="TotalRow" value="@(SM.TotalRow)" />
<input type="hidden" id="PageCount" value="@(SM.MaxPage)" />
