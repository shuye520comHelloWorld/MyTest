<configuration>
  <appSettings configSource="config\local.config"></appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
  </system.web>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="MKSMSWSSoap" />
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://webservices.chndev.mktest.com/MKSMSWebService/MKSMSWS.asmx"
          binding="basicHttpBinding" bindingConfiguration="MKSMSWSSoap"
          contract="SmsWs.MKSMSWSSoap" name="MKSMSWSSoap" />
    </client>
  </system.serviceModel>  
  <location path="v1">
    <system.web>
      <httpHandlers>
        <add path="*" type="ServiceStack.HttpHandlerFactory, ServiceStack" verb="*" />
      </httpHandlers>
    </system.web>

    <!-- Required for IIS 7.0 -->
    <system.webServer>
      <validation validateIntegratedModeConfiguration="false" />
      <handlers>
        <add path="*" name="ServiceStack.Factory" type="ServiceStack.HttpHandlerFactory, ServiceStack" verb="*" preCondition="integratedMode" resourceType="Unspecified" allowPathInfo="true" />
      </handlers>
      <modules runAllManagedModulesForAllRequests="true">
        <remove name="WebDAVModule" />
      </modules>
    </system.webServer>
  </location>

</configuration>