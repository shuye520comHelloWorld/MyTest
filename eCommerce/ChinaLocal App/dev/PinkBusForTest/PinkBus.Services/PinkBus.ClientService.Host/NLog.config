<?xml version="1.0" encoding="utf-8" ?>
<nlog throwExceptions="false" xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
  <variable name="verbose" value="${longdate} | ${level} | ${logger} | ${machinename} |${processname} | ${message} ${newline}${exception:format=tostring}"/>
  <variable name="logdir" value="D:/logs/pinkbusclientservice" />
  <targets>
    <target name="toLogFile" xsi:type="File" layout="${verbose}" fileName="${logdir}/infoOut.${shortdate}.log" />
    <target name="toMail" xsi:type="Mail" layout="${verbose}" smtpServer="msg02cas.chn.mkcorp.com" from="PinkBusClientService@mkcorp.com"
            to="MDM-DEV-API@mkcorp.com"
            subject="Notification From PinkBusClientService(dev)" />
    <wrapper-target xsi:type="AsyncWrapper" name="asyncFile">
      <target-ref name="toLogFile"/>
    </wrapper-target>

    <wrapper-target xsi:type="AsyncWrapper" name="asyncMail">
      <target-ref name="toMail"/>
    </wrapper-target>
  </targets>
  <rules>
    <logger name="*" minlevel="Info" maxlevel="Warn" writeTo="asyncFile" />
    <logger name="*" minlevel="Error" writeTo="asyncMail" />
  </rules>
</nlog>
