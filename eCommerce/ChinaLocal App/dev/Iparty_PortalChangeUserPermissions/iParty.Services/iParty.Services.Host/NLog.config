<?xml version="1.0" encoding="utf-8" ?>
<nlog throwExceptions="false" xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
  <variable name="verbose" value="${longdate} | ${level} | ${logger} | ${machinename} |${processname} | ${message} ${newline}${exception:format=tostring}"/>
  <variable name="logdir" value="D:\LogFiles\MobileAPILogs\iparty" />
  <targets>
    <target name="infoOut" xsi:type="File" layout="${verbose}" fileName="${logdir}/infoOut.${shortdate}.log" />
    <target name="errOut" xsi:type="Mail" layout="${verbose}" smtpServer="msg01cas.chn.mkcorp.com" from="iParty@mkcorp.com"
            to="Kai.Rong@mkcorp.com, Bill.Dou@mkcorp.com"
            subject="iparty (prod)" />
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" maxlevel="Warn" writeTo="infoOut" />
    <logger name="*" minlevel="Error" writeTo="errOut" />
  </rules>
</nlog>
